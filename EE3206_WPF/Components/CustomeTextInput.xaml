<UserControl x:Class="EE3206_WPF.Components.CustomeTextInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EE3206_WPF.Components"
             mc:Ignorable="d" 
             x:Name="TextInput"
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox TextWrapping="Wrap" Padding="6" FontSize="24" VerticalAlignment="Stretch" VerticalContentAlignment="{Binding VerticalLoc,ElementName=TextInput}" Text="{Binding TextVal,ElementName=TextInput}">
        <TextBox.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="12"/>
            </Style>
        </TextBox.Resources>
    </TextBox>
</UserControl>
