        </Grid.RowDefinitions>
        <Border CornerRadius="24" Grid.Row="0" Height="600" Width="1180" Background="#393352"></Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
