<Page x:Class="EE3206_WPF.Pages.Cart.Cart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EE3206_WPF.Pages.Cart" xmlns:components1="clr-namespace:EE3206_WPF.Components"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Cart">

    <Grid Background="#262537">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <ListBox Name="productdata" Background="Transparent" Margin="70,10,70,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Width="100" Foreground="White" Text="{Binding  productName}"></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <components1:PopUpWindow Width="450" Height="200" ></components1:PopUpWindow>
        <StackPanel HorizontalAlignment="Center" Margin="0,2,0,0" Grid.Row="1" Orientation="Horizontal">
            <components1:BrowseBackButton Margin="0,0,24,0" Grid.Row="1"/>
            <components1:AddButton AddBtnClick="AddButton_AddBtnClick" Margin="24,0,0,0" tagName="Checkout"/>
        </StackPanel>
    </Grid>
</Page>
